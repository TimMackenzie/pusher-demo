<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <RelativeLayout
        android:id="@+id/chat_group_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
    >
        <LinearLayout
            android:id="@+id/left_column"
            android:layout_width="@dimen/side_column"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
        >
            <TextView
                android:id="@+id/chat_initials_1"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:drawableTop="@drawable/ic_android"
                android:gravity="center"
                android:background="@drawable/rounded_light"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/left_column"
            android:layout_centerInParent="true"
        >
            <TextView
                android:id="@+id/chat_message_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:shadowColor="@color/grey_dark"
                android:text="@string/placeholder"
            />

            <TextView
                android:id="@+id/chat_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textAppearance="?android:textAppearanceSmall"
                android:textSize="10sp"
                android:textColor="@color/grey_light"
                android:layout_below="@id/chat_message_1"
            />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_group_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
    >
        <LinearLayout
            android:id="@+id/right_column"
            android:layout_width="@dimen/side_column"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
        >
            <TextView
                android:id="@+id/chat_initials_2"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:drawableTop="@drawable/ic_android"
                android:background="@drawable/rounded_dark"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/right_column"
            android:layout_centerVertical="true"
            android:gravity="right"
        >
            <TextView
                android:id="@+id/chat_message_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:shadowColor="@color/grey_dark"
                android:text="@string/placeholder"
                android:gravity="right"
            />

            <TextView
                android:id="@+id/chat_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textAppearance="?android:textAppearanceSmall"
                android:textSize="10sp"
                android:textColor="@color/grey_light"
                android:gravity="right"
            />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>